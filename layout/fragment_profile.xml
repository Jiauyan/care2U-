<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_page_background2"
    android:orientation="vertical"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_page_backgorund"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_picture_IV"
                android:layout_width="112dp"
                android:layout_height="112dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:background="@drawable/profile_photo_shape"
                android:src="@drawable/profile_man_photo_profile" />

            <TextView
                android:id="@+id/name_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_picture_IV"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Eng Jun Cheng"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/role_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_TV"
                android:layout_alignTop="@id/gender_TV"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/gender_TV"
                android:text="Student of UM"
                android:textColor="#CEC3C3"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/specialuse"
                android:layout_below="@+id/name_TV"
                android:layout_alignTop="@+id/gender_TV"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/gender_TV"
                android:text=" | "
                android:textColor="#CEC3C3"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/gender_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_TV"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="Male"
                android:textColor="#CEC3C3"
                android:textSize="12dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_TV"
                android:layout_alignTop="@+id/gender_TV"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/gender_TV"
                android:text=" | "
                android:textColor="#CEC3C3"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/age_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_TV"
                android:layout_alignTop="@+id/gender_TV"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/gender_TV"
                android:text="20 years old"
                android:textColor="#CEC3C3"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/height_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/weight_TV"
                android:layout_gravity="center"
                android:layout_alignEnd="@id/specialuse"
                android:layout_marginRight="50dp"
                android:text="175 cm"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/w"
                android:layout_gravity="center"
                android:layout_marginRight="75dp"
                android:layout_toLeftOf="@+id/w"
                android:text="Height"
                android:textColor="#CEC3C3"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/weight_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/role_TV"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:text="65 kg"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/w"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/weight_TV"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:text="Weight"
                android:textColor="#CEC3C3"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/bloodtype_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/bloodtype_tv"
                android:layout_alignStart="@id/bloodtype_tv"
                android:layout_marginLeft="20dp"
                android:text="O"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/bloodtype_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/w"
                android:layout_gravity="center"
                android:layout_marginLeft="60dp"
                android:layout_toRightOf="@+id/w"
                android:text="Blood Type"
                android:textColor="#CEC3C3"
                android:textSize="12sp" />


        </RelativeLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/profile_page_background2"
            android:columnCount="2"
            android:rowCount="2">

            <Button
                android:id="@+id/edit_profile_button"
                android:layout_width="155dp"
                android:layout_height="122dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/profile_button_icon"
                android:drawableTop="@drawable/profile_edit_profile_icon"
                android:paddingTop="20dp"
                style="@style/BUTTON"
                android:text="Edit Profile"
                android:textAllCaps="false" />


            <Button
                android:id="@+id/prescription_order_button"
                android:layout_width="155dp"
                android:layout_height="122dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/profile_button_icon"
                android:drawableTop="@drawable/profile_medical_prescription_order"
                android:paddingTop="20dp"
                style="@style/BUTTON"
                android:text="Prescription Order"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/faqs_button"
                android:layout_width="155dp"
                android:layout_height="122dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/profile_button_icon"
                android:drawableTop="@drawable/profile_faq_icon"
                android:paddingTop="20dp"
                style="@style/BUTTON"
                android:text="FAQs"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/logout_button"
                android:layout_width="155dp"
                android:layout_height="122dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/profile_button_icon"
                android:drawableTop="@drawable/profile_log_out_icon"
                android:paddingTop="20dp"
                style="@style/BUTTON"
                android:text="Log Out"
                android:textAllCaps="false" />
        </GridLayout>
    </LinearLayout>


</FrameLayout>