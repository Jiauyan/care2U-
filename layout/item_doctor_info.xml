<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    style="@style/SCREEN_Image"
    android:background="@drawable/bmi_background_et"
    android:padding="10dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageProfile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/doctor1"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">


            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. Elizabeth Smith"
                android:textSize="20sp"
                style="@style/TEXT"
                android:fontFamily="sans-serif-black"
                />

            <TextView
                android:id="@+id/description_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mental Health Specialist 10 Years Experience"
                android:textSize="15sp"
                style="@style/TEXT"
                android:fontFamily="sans-serif"
                />

            <TextView
                android:id="@+id/original_tv"
                style="@style/TEXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hawaii, United States"
                />



        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rating_star"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:id="@+id/rating_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TEXT"
            android:text="4.5"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            />

        <Button
            android:id="@+id/book_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Appointment"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/book_appointment_background"
            android:layout_gravity="right"
            android:layout_marginTop="8dp"
            android:padding="-20dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="20dp"

            />


    </LinearLayout>



</LinearLayout>