<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculateBMIActivity"
    android:background="#2000B0CB"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/close_iv"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/close_icon"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="BMI CALCULATOR"
        android:textColor="#026B9F"
        android:textSize="38sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif"
        android:text="Enter Your Height (cm)"
        style="@style/TEXT"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/height_ET"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:hint="165"
        android:gravity="center"
        android:layout_gravity="center"
        android:inputType="number"
        style="@style/SCREEN_Image"
        android:background="@drawable/bmi_background_et"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your Weight (kg)"
        android:layout_gravity="center"
        android:textSize="25sp"
        style="@style/TEXT"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/weight_ET"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:hint="60"
        android:gravity="center"
        android:layout_gravity="center"
        android:inputType="number"
        style="@style/SCREEN_Image"
        android:background="@drawable/bmi_background_et"
        />

    <Button
        android:id="@+id/calculate_BMI_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/health_record_button_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bmi_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Result"
            android:textColor="#026B9F"
            android:textSize="35sp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/result_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-black"
            android:text="0.0"
            android:textColor="@color/blue"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/status_tv"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Status"
            android:layout_gravity="center"
            style="@style/TEXT"
            />

    </LinearLayout>



</LinearLayout>