<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Care2U" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Care2U.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SCREEN">
        <item name="android:background">#36454F</item>
    </style>
    <style name="TEXT">
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="BUTTON">
        <item name="android:backgroundTint">#36454F</item>
    </style>
    <style name="BOTTOM_BAR">
        <item name="android:background">#5A5A5A</item>
    </style>
    <style name="TOP_BAR">
        <item name="android:background">#5A5A5A</item>
    </style>
    <style name="SCREEN_Image">
        <item name="android:backgroundTint">#36454F</item>
    </style>


</resources>